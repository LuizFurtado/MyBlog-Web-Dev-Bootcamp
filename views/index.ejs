<% include partials/header %>
    <main class="ui main text container segment">
        <h1>Hello! This is my Personal Blog!</h1>

        <% posts.forEach( post => { %>
            <article>
                <h2><%= post.title %></h2>
                <img src="<%= post.image %>" alt="" srcset="" width="100%">
                <p><%= post.body %></p>
            </article>
        <% }); %>
    </main>
<% include partials/footer %>