<% include partials/header %>
<main class="ui main text container segment">
  <h1>Hello! This is my Personal Blog!</h1>

  <% posts.forEach( post => { %>
  <article>
    <h2><%= post.title %></h2>
    <div class="content">
      <span><%= post.created.toDateString(); %></span>
    </div>
    <img src="<%= post.image %>" alt="" srcset="" width="100%" />
    <p><%- post.body.substring(0, 100); %> ...</p>
    <a href="/posts/<%= post._id %>">Read More</a>
  </article>
  <% }); %>
</main>
<% include partials/footer %>
