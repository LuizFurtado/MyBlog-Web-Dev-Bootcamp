<% include partials/header %>
    <main class="ui main text container segment">
        <h1 class="ui huge header">Add New Post</h1>

        <form class="ui form" action="/posts" method="POST">
            <div class="field">
                <label for="title">Title</label>
                <input id="title" type="text" name="post[title]" placeholder="Title">
            </div>
            <div class="field">
                <label for="image">Image URL</label>
                <input id="image" type="text" name="post[image]" placeholder="Image URL">
            </div>
            <div class="field">
                <label for="body">Your post</label>
                <textarea name="post[body]" id="body" cols="30" rows="10" placeholder="Your post content"></textarea>
            </div>
            <input class="ui purple big basic button" type="submit" value="Submit!">
        </form>
    </main>
<% include partials/footer %>