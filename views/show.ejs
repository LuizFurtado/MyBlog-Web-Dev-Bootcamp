<% include partials/header %>

<main class="ui main text container segment">
  <h1 class="ui huge header"><%= post.title %></h1>
  <div class="ui top attached">
    <div class="item">
      <img
        class="ui centered rounded image"
        src="<%= post.image %>"
        alt=""
        srcset=""
        width="100%"
      />
      <div class="content">
        <span><%= post.created.toDateString(); %></span>
      </div>
      <div class="description">
        <p><%- post.body %></p>
      </div>
    </div>
  </div>
</main>

<% include partials/footer %>
